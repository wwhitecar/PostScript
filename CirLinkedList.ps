% This picture will dispaly a cir linked list
% that contains chars to make up "Hello World". 

% Will draw my name in the lower right hand corner.

/DrawName {
	0 0 moveto
	/Times-Roman findfont %Set font information
	20 scalefont
	setfont

	0 0 0 setrgbcolor
	(William Trevor Whitecar) show %Push my name to stack
	stroke
} def

% This will draw the 2 squares associated with the nodes
% contained in the linked list. 
/DrawSquaresForNode {
	1 0 0 setrgbcolor
	20 50 520 {
		dup 1.25 mul 
		newpath
		moveto
		0 30 rlineto
		40 0 rlineto
		0 -30 rlineto
		40 0 rlineto
		0 30 rlineto
		-40 0 rlineto
		0 -30 rlineto
		-40 0 rlineto
		stroke
	} for
} def

% This function will draw the lines bettween the nodes
% of the linked list.
/DrawArrowToNextNode {
	0 1 0 setrgbcolor
	0 1 9 {
		dup
		dup
	       	60 mul exch
		50 mul exch
		newpath
		moveto
		0 32 rlineto
		5 -5 rlineto
		-5 5 rlineto
		-5 -5 rlineto
		stroke
	} for
} def


DrawSquaresForNode
DrawArrowToNextNode
DrawName
showpage
